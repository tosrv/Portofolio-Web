<!-- project section -->
<h2 class="pt-5 pt-md-0 mb-4"><b>My Projects:</b></h2>
<div class="swiper swiper-project bg-swiper rounded-3">
  <div class="swiper-wrapper p-3 p-lg-5">

    <!-- projects -->
    {{#each projects}}
      <div class="swiper-slide">
        <div class="card shadow-sm bg-theme rounded-3">
          <div class="d-flex justify-content-center bg-card rounded-top-3">
            <img
              src="/assets/images/projects/{{this.image}}"
              alt="CRUD"
              class="object-fit-cover overflow-hidden rounded-top-3"
            /></div>
          <div class="card-body d-flex flex-column justify-content-end">
            <h5 class="card-title"><b>{{this.title}}</b></h5>
            <p class="card-text text-secondary">{{this.description}}</p>
            <div class="d-flex flex-wrap gap-3 mb-3">
              <small><span
                  class="px-2 py-1 bg-card text-secondary rounded-5"
                >{{this.tech.[0]}}</span></small>
              <small><span
                  class="px-2 py-1 bg-card text-secondary rounded-5"
                >{{this.tech.[1]}}</span></small>
              <small><span
                  class="px-2 py-1 bg-card text-secondary rounded-5"
                >{{this.tech.[2]}}</span></small>
              <small><span
                  class="px-2 py-1 bg-card text-secondary rounded-5"
                >{{this.tech.[3]}}</span></small>
            </div>
            <div class="d-flex flex-column flex-md-row gap-0 gap-md-3">
              <small>
                <div class="d-flex align-items-center">
                  <i class="bi bi-github mx-2"></i>
                  <a
                    href="{{this.githubLink}}"
                    class="text-decoration-none text-secondary"
                  >{{this.github}}</a>
                </div>
              </small>
              <small>
                <div class="d-flex align-items-center">
                  <i class="bi bi-box-arrow-up-right mx-2"></i>
                  <a
                    href="{{this.demoLink}}"
                    class="text-decoration-none text-secondary"
                  >{{this.demo}}
                  </a>
                </div>
              </small>
            </div>
          </div>
        </div>
      </div>
    {{/each}}

    <!-- next project -->
    <div class="swiper-slide">
      <div class="card justify-content-center gap-2 shadow-sm bg-theme rounded-3">
        <h2 class="text-center fw-bold text-secondary">Next Project</h2>
        <h2 class="text-center fw-bold text-secondary">Coming Soon</h2>
        <h2 class="text-center fw-bold text-secondary">Let's build it together</h2>
      </div>
    </div>
    <div class="swiper-slide"></div>
  </div>
</div>